<% form_for(@album, :html => {:multipart => true, :class => "admin"}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :artist_id %><br />
    <%= f.select :artist_id, @artists %>
  </p>
  <p>
    <%= f.label :label_id %><br />
    <%= f.select :label_id, @labels %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </p>  
  <p>
    <%= f.label :release_date %><br />
    <%= f.date_select :release_date, {:include_blank => true}, :class => "date" %>
  </p>
  <p>
    <%= f.label :to_be_released %><br />
    <%= f.text_field :to_be_released %>
  </p>
	<p>No≈õnik: 
		<%  @album.media_types.each do |id, name| %>
			<%= f.radio_button "media", id %>
			<%= f.label ("media_" + id.to_s, name) %>
		<% end %>
	</p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Zapisz zmiany' %>
  </p>
  <p>
    <%= f.label :created_by %><br />
    <%= f.text_field :created_by %>
  </p>
  <p>
    <%= f.label :updated_by %><br />
    <%= f.text_field :updated_by %>
  </p>
<% end %>
