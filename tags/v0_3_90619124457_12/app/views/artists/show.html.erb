<h1><%=h @artist.name %></h1>

<div id="brief">
	<h2 class="hide">Informacje podstawowe</h2>
	<% if !@artist.image.nil?  %>
	<div id="photo">
		<%= image_tag @artist.image.url(:medium), :alt => 'Zdjęcie ' + @artist.name, :class => "image" %>
		<span id="frame"></span>
		<span id="info">Zdjęcie:&nbsp;<%= link_to @artist.image_source, @artist.image_source_url %></span>
	</div>
	<% end %>
	<ul class="essential">
		<% if !@artist.realname="" %><li>Imię i nazwisko: <%= @artist.realname %></li><% end %>
		<% if !@artist.website.empty? %><li>Oficjalna strona internetowa: <%= link_to @artist.website, @artist.website %></li><% end %>
		<% if !@artist.bands.empty? %>
		<li>
			Projekty: <%= render :partial => "artists/name_list", :object => @artist.bands %>
		</li>
		<% end %>
		<% if !@artist.members.empty? %>
		<li>
			<%= I18n.t 'layout.band_members' %>: <%= render :partial => "artists/name_list", :object => @artist.members %>
		</li>
		<% end %>
	</ul>
	
	<ul class="additional">
		<li class="hide">W chcęliście: <%= @artist.created_at %></li>
		<li class="hide">W kolekcji: <%= @artist.created_at %></li>
		<li>Dodany: <%= @artist.created_at.strftime("%d %B %Y") %></li>
		<li class="hide">Wyświetleń: <%= @artist.created_at %></li>
	</ul>
	
	<ul class="other">
		<% if !@artist.concert_info="" %><li>Info koncertowe: <%= @artist.concert_info %></li><% end %>
		<% if !@artist.since="" %><li>Istnieje od: <%= @artist.since.year %></li><% end %>
		<% if !@artist.till="" %><li>Istniało do: <%= @artist.till.year %></li><% end %>
		<% if !@artist.special="" %><li class="hide">Czy specjalny?: <%= @artist.special %></li><% end %>
		<% if !@artist.trivia="" %><li>Ciekawostki: <%= @artist.trivia %></li><% end %>
		<% if !@artist.created_by="" %><li>Utworzony przez: <%= @artist.created_by %></li><% end %>
		<% if !@artist.updated_by="" %><li>Ostatnio edytowany przez: <%= @artist.updated_by %></li><% end %>
		<% if !@artist.viewed="" %><li>Oglądany: <%= @artist.viewed %> razy</li><% end %>
		<% if !@artist.status="" %><li class="hide">Status: <%= @artist.status %></li><% end %>
	</ul>
</div>

<div id="main">
	<% if !@artist.description.empty? %>
	<h2>Biografia</h2>
	<p class="info"><%= @artist.description %></p>
	<% end %>
	
	<% if !@artist.albums.empty? %>
	<h2>Wydane albumy<% if !@artist.bands.empty? %> solo<% end %></h2>
	<%= render :partial => "albums/list", :object => @artist.albums %>
	<% end %>
	
	<% if !@group_albums.empty? %>
	<h2>Albumy wydane w projektach</h2>
	<%= render :partial => "albums/list", :object => @group_albums %>
	<% end %>
	
	<h2 class="hide">Komentarze</h2>
	<ul id="comments" class="hide">
		<li>pierwszy</li>
		<li>drugi</li>
		<li>trzeci</li>
	</ul>
</div>

<div class="admin">
<%= link_to 'Edytuj wykonawcę', edit_artist_path(@artist) %>
</div>