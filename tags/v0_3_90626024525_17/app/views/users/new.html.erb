<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>

<p><label for="email">Adres e-mail (będziesz go używał do logowania się)</label><br/>
<%= f.text_field :email %></p>

<p><label for="password">Wpisz hasło (co najmniej 4 znaki)</label><br/>
<%= f.password_field :password %></p>

<p><label for="password_confirmation">Potwierdź hasło</label><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= submit_tag 'Załóż konto' %></p>
<% end -%>
